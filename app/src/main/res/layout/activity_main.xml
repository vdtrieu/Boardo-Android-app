<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/periodWidth"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="@dimen/periodWidth"
            android:layout_height="wrap_content"
            android:text="#"
            android:textAlignment="center"
            android:textSize="@dimen/contentSize" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="@dimen/periodWidth"
            android:layout_height="@dimen/periodHeight"
            android:layout_marginTop="@dimen/padding"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="3"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="5" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="6" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="7" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="8" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="9" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="10" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="11" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="@dimen/periodHeight"
            android:background="@drawable/pcell_shape"
            android:gravity="center"
            android:text="12" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/schedule_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/monday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:text="Mon"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="0"
                android:background="@drawable/cell_shape"
                android:text="Tue"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toEndOf="@+id/monday"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="0"
                android:background="@drawable/cell_shape"
                android:text="Wed"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toEndOf="@+id/tuesday"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/thursday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/cell_shape"
                android:text="Thu"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toEndOf="@+id/wednesday"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/friday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="0"
                android:background="@drawable/cell_shape"
                android:text="Fri"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toEndOf="@+id/thursday"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/saturday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/cell_shape"
                android:text="Sat"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toEndOf="@+id/friday"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sunday"
                android:layout_width="@dimen/day"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/cell_shape"
                android:text="Sun"
                android:textAlignment="center"
                android:textSize="@dimen/contentSize"
                app:layout_constraintStart_toEndOf="@+id/saturday"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/Schedule"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="34dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/CreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:src="@drawable/add_icon2"
        android:tint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>