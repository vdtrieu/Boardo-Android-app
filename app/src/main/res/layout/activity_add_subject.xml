<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Môn"
            android:textSize="@dimen/contentSize"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editSubject"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Tên môn học"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:focusable="false"
            android:text="Phòng"
            android:textSize="@dimen/contentSize"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonSetTime"
            app:layout_constraintStart_toEndOf="@+id/buttonSetTime"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/edit_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/text_view_shape"
            android:ems="2"
            android:focusable="false"
            android:fontFamily="casual"
            android:inputType="text|textPersonName"
            android:text=""
            android:textSize="@dimen/contentSize"
            android:visibility="invisible"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="GV"
            android:textSize="@dimen/contentSize"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/editNameTeacher"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editNameTeacher"
            android:layout_width="226dp"
            android:layout_height="41dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Tên"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/editWeekBreak" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.415"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/editNameTeacher" />

        <EditText
            android:id="@+id/editNote"
            style="@android:style/Widget.Holo.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Ghi chú ..."
            android:inputType="none"
            android:lines="4"
            android:textSize="@dimen/contentSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_set_noti" />

        <Button
            android:id="@+id/buttonSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/cell_shape"
            android:fontFamily="sans-serif"
            android:padding="@dimen/padding"
            android:text="Thời gian"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="SĐT"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/editEmail" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView3"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/timeDayView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_shape"
                    android:focusable="false"
                    android:fontFamily="casual"
                    android:inputType="none"
                    android:padding="@dimen/padding"
                    android:textSize="@dimen/contentSize"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="141dp"
                    tools:layout_editor_absoluteY="121dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tuần"
            android:textSize="@dimen/contentSize"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Số tuần"
            android:textSize="@dimen/contentSize"
            app:layout_constraintBaseline_toBaselineOf="@+id/editNumWeek"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <EditText
            android:id="@+id/editStartingWeek"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="number"
            android:text="15"
            android:textAlignment="center"
            android:textSize="@dimen/contentSize"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3" />

        <EditText
            android:id="@+id/editNumWeek"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="15"
            android:textAlignment="center"
            android:textSize="@dimen/contentSize"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/editStartingWeek" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="Buổi"
            android:textSize="@dimen/contentSize"
            app:layout_constraintStart_toEndOf="@+id/buttonSetTime"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Bắt đầu"
            android:textSize="@dimen/contentSize"
            app:layout_constraintBaseline_toBaselineOf="@+id/editStartingWeek"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Nghỉ"
            android:textAlignment="center"
            android:textSize="@dimen/contentSize"
            app:layout_constraintBaseline_toBaselineOf="@+id/editWeekBreak"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <EditText
            android:id="@+id/editWeekBreak"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:inputType="text"
            android:text="N/A"
            android:textAlignment="viewStart"
            android:textSize="@dimen/contentSize"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/editNumWeek" />

        <Switch
            android:id="@+id/switch_set_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:splitTrack="false"
            android:switchTextAppearance="@style/TextAppearance.AppCompat"
            android:text="Nhắc nhở     "
            android:textSize="@dimen/contentSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPhone"
            tools:checked="false" />

        <EditText
            android:id="@+id/edit_time_noti"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:hint="phút"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/switch_set_noti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toEndOf="@+id/switch_set_noti" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>